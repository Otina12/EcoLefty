@model EcoLefty.Application.Offers.DTOs.CreateOfferRequestDto

@{
    ViewData["Title"] = "Create Offer";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/auth-form.css" />
</head>
<body>
    <div class="my-form">
        <div class="title">
            Create Offer
        </div>
        <form asp-controller="Offer" asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div class="my-field">
                <label asp-for="Title" class="required">Title</label>
                <input asp-for="Title" type="text" placeholder="Enter offer title" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="my-field">
                <label asp-for="Description" class="required">Description</label>
                <textarea asp-for="Description" placeholder="Enter offer description" required></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="my-field">
                <label asp-for="UnitPrice" class="required">Unit Price</label>
                <input asp-for="UnitPrice" type="number" placeholder="Discounted price" step="0.01" required />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
            <div class="my-field">
                <label asp-for="TotalQuantity" class="required">Total Quantity</label>
                <input asp-for="TotalQuantity" type="number" placeholder="Enter total quantity" required />
                <span asp-validation-for="TotalQuantity" class="text-danger"></span>
            </div>
            <div class="my-field">
                <label asp-for="StartDateUtc" class="required">Start Date</label>
                <input asp-for="StartDateUtc" class="styled-date" type="datetime-local" required />
                <span asp-validation-for="StartDateUtc" class="text-danger"></span>
            </div>
            <div class="my-field">
                <label asp-for="ExpiryDateUtc" class="required">Expiry Date</label>
                <input asp-for="ExpiryDateUtc" class="styled-date" type="datetime-local" required />
                <span asp-validation-for="ExpiryDateUtc" class="text-danger"></span>
            </div>

            <div class="my-field">
                <label asp-for="ProductId" class="required">Product</label>
                <select asp-for="ProductId"
                        asp-items="@(new SelectList(ViewBag.Products, "Id", "Name"))"
                        class="form-control" required>
                    <option value="">-- Select a Product --</option>
                </select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <input class="submit-button" type="submit" value="Create Offer" />
        </form>
    </div>
</body>
</html>
