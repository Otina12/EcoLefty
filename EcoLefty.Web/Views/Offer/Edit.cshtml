@model EcoLefty.Application.Offers.DTOs.UpdateOfferRequestDto

@{
    ViewData["Title"] = "Edit Offer";
}

<div class="my-form">
    <div class="title">
        Edit Offer
    </div>
    <form asp-controller="Offer" asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <div class="my-field">
            <label asp-for="Title" class="required">Title</label>
            <input asp-for="Title" type="text" placeholder="Enter offer title" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="my-field">
            <label asp-for="Description" class="required">Description</label>
            <textarea asp-for="Description" placeholder="Enter offer description" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="my-field">
            <label asp-for="UnitPrice" class="required">Unit Price</label>
            <input asp-for="UnitPrice" type="number" placeholder="Enter discounted price" step="0.01" required />
            <span asp-validation-for="UnitPrice" class="text-danger"></span>
        </div>
        <div class="my-field">
            <label asp-for="TotalQuantity" class="required">Total Quantity</label>
            <input asp-for="TotalQuantity" type="number" placeholder="Enter total quantity" required />
            <span asp-validation-for="TotalQuantity" class="text-danger"></span>
        </div>
        <div class="my-field">
            <label asp-for="StartDateUtc" class="required">Start Date</label>
            <input asp-for="StartDateUtc" type="datetime-local" required />
            <span asp-validation-for="StartDateUtc" class="text-danger"></span>
        </div>
        <div class="my-field">
            <label asp-for="ExpiryDateUtc" class="required">Expiry Date</label>
            <input asp-for="ExpiryDateUtc" type="datetime-local" required />
            <span asp-validation-for="ExpiryDateUtc" class="text-danger"></span>
        </div>
        <input class="submit-button" type="submit" value="Update Offer" />
    </form>
</div>
